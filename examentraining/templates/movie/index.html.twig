{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row mt-4">
        {% for category in categories %}
            <div class="col-md-4">
                <h1 class="mb-4">{{ category.name }}</h1>
                <h5>{{ category.description }}</h5>
                <a href="{{ path("app_product", {id: category.id}) }}" class="mt-4 btn btn-primary">Bekijk films</a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}